# SafarBot Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB Connection String
# Replace <db_password> with your actual MongoDB password
MONGODB_URL=mongodb+srv://admin:<db_password>@cluster0.4b4rg.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# Database Name
MONGODB_DB_NAME=SafarBot

# Database Collections (auto-created)
# Users: user_fields
# Flights: flights
# Hotels: hotels
# Bookings: bookings
# Itineraries: itineraries
# Price Alerts: price_alerts
# Affiliate: affiliate_clicks, affiliate_bookings
# Chat: chat_sessions
# Restaurants: restaurants
# Saved Trips: saved_trips
# Notifications: notifications

# =============================================================================
# AI Services Configuration
# =============================================================================
# Google Gemini API Key (Required for AI chat and itinerary generation)
GOOGLE_API_KEY=your_google_api_key_here

# Google SERP API Key (Optional - for enhanced flight search)
SERP_API_KEY=your_serp_api_key_here

# LangSmith Configuration (Optional - for AI development monitoring)
LANGSMITH_API_KEY=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
LANGSMITH_PROJECT=safarbot
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ChromaDB Configuration (Optional - for vector storage)
CHROMA_PERSIST_DIRECTORY=./chroma_db

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12

# =============================================================================
# Email Configuration
# =============================================================================
# SMTP Settings for password reset and verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Email Templates
EMAIL_FROM_NAME=SafarBot
EMAIL_FROM_ADDRESS=noreply@safarbot.com

# =============================================================================
# External API Services
# =============================================================================
# Flight Search API (if using external service)
FLIGHT_API_KEY=
FLIGHT_API_BASE_URL=

# Hotel Search API (if using external service)
HOTEL_API_KEY=
HOTEL_API_BASE_URL=

# Weather API (for itinerary planning)
WEATHER_API_KEY=
WEATHER_API_BASE_URL=

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://safarbot.vercel.app

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/safarbot.log

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# =============================================================================
# File Upload
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# =============================================================================
# Development & Testing
# =============================================================================
# Test Database (separate from production)
TEST_MONGODB_URL=mongodb://localhost:27017/safarbot_test

# Seed Data
SEED_DATA_ENABLED=False
SEED_DATA_FILE=./seed_data.json

# =============================================================================
# Production Settings
# =============================================================================
# Uncomment and configure for production deployment
# ENVIRONMENT=production
# DEBUG=False
# API_WORKERS=4
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com 