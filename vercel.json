{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd client && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/client/dist/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/dist/favicon.ico"
    },
    {
      "src": "/logo192.png",
      "dest": "/client/dist/logo192.png"
    },
    {
      "src": "/logo512.png",
      "dest": "/client/dist/logo512.png"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/dist/manifest.json"
    },
    {
      "src": "/robots.txt",
      "dest": "/client/dist/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://safarbot-backend.onrender.com/api/v1"
  }
} 